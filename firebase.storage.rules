rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default (adjust if needed)
    match /{allPaths=**} {
      allow read;
    }

    // Rules for user post images
    match /posts/{userId}/{fileName} {
      // Allow write only if the user is authenticated and the userId matches their UID
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for Lost & Found images
    match /lostAndFound/{userId}/{fileName} {
      // Allow write only if the user is authenticated and the userId matches their UID
      // This allows both 'lost' and 'found' item image uploads under the reporter's UID
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
